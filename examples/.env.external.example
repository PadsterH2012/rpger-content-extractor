# External Database Configuration
SETUP_MODE=external
DEPLOYMENT_TYPE=external-dbs

# External Database URLs
EXTERNAL_MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/rpger
EXTERNAL_CHROMADB_URL=https://your-chromadb-instance.com
EXTERNAL_MONGODB_DATABASE=rpger
EXTERNAL_CHROMA_TENANT=default_tenant
EXTERNAL_CHROMA_DATABASE=default_database

# AI Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings
FLASK_ENV=production
MAX_CONTENT_LENGTH=200
UPLOAD_TIMEOUT=300
